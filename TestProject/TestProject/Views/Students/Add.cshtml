@model TestProject.Models.Students
@{
    ViewBag.Title = "Добавление нового ученика";
}

<form asp-action="Add" asp-controller="Students">
    <div class="form-group">
        <label asp-for="ClassName">Класс</label>
        <select asp-for="ClassName" asp-items="ViewBag.Classes"></select>
    </div>
    <div class="form-group">
        <label asp-for="FullName">ФИО</label>
        <input type="text" asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" />
    </div>
</form>
