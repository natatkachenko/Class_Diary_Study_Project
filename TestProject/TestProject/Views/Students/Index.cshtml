@model IEnumerable<TestProject.Models.Students>
@{
    ViewBag.Title = "Ученики";
}
<h3>Ученики</h3>
<table class="table">
    <tr>
        <td>Номер</td>
        <td>ФИО</td>
    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Id</td>
            <td><a asp-action="Grade" asp-controller="SubjectGrade" asp-route-id="@student.Id">@student.FullName</a></td>
            <td>
                <a asp-action="Delete" asp-controller="Students" asp-route-classname="@student.ClassName" asp-route-id="@student.Id">Удалить</a>
            </td>
        </tr>
    }
</table>
<a asp-action="Add">Добавить</a>
