@model TestProject.Models.Subjects
@{
    ViewBag.Title = "Добавление нового предмета";
}

<form asp-action="Add" asp-controller="Subjects">
    <div class="form-group">
        <label asp-for="Name">Название предмета</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" />
    </div>
</form>
