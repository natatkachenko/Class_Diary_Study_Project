@model IEnumerable<TestProject.Models.ClassSubject>
@{
    ViewBag.Title = "Классы, изучающие предмет";
}
<h3>Список классов, у которых ведётся предмет</h3>
<table class="table">
    <tr>
        <td>Название класса</td>
    </tr>
    @foreach (var studentClass in Model)
    {
        <tr>
            <td><a asp-action="StudentGradeOnSubject" asp-controller="ClassSubject" asp-route-className="@studentClass.ClassName" asp-route-subjectName="@studentClass.SubjectName">@studentClass.ClassName</a></td>
        </tr>
    }
</table>
