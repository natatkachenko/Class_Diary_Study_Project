@model TestProject.Models.Class
@{ 
    ViewBag.Title = "Удаление класса";
}

<div>
    <dl>
        <dt>Наименование</dt>
        <dd>
            @Html.DisplayFor(model=>model.Name)
        </dd>
    </dl>
    <div>
        <form asp-controller="Home" asp-action="Delete" asp-route-name="@Model.Name">
            <div class="form-group">
                <input type="submit" value="Удалить" />
            </div>
        </form>
    </div>
</div>
